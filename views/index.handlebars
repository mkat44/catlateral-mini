<div class="container">
<img src="../assets/images/logo.png" class="img-fluid">
<h1 class="text-center">The Fuzzy and Furious Mini-Game!</h1>

<div class="row">
    <div class="col-lg-6">
        <img src="../assets/images/tv.gif" class="img-fluid">
    </div>
    <div class="col-lg-6">
        <img src="../assets/images/dishes.gif"
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <h2>Things to Destroy:</h2>
        <ul>
        {{#each things}}
            {{#unless destroyed}}
            {{> things/things-block destroyed=true}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-lg-6 float-right">
        <h2>Destroyed Things:</h2>
        <ul>
        {{#each things}}
            {{#if destroyed}}
            {{> things/things-block destroyed=false}}
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <img src="../assets/images/books.gif" class="img-fluid">
    </div>
    <div class="col-lg-6">
        <img src="../assets/images/mayhem.gif" class="img-fluid">
    </div>
</div>
<hr>
<div class="row">
    <div class="col-lg-12">
        <h2>Add More Things to Destroy</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="thing">Item:</label>
                <input type="text" id="thing" name="name">
                <button class="btn-danger btn-sm" type="submit">Add Thing</button>
            </div>
        </form>
    </div>
</div>
</div>